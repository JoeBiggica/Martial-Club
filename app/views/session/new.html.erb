

<div class="container">
	<div class="row col-md-4 col-md-offset-4" style="text-align: center">
		<h1 id="sign-up-head">Sign up here</h1>
		<div class="sign-up-box">
			<%= form_tag("/users", method: "post") do %>
			  <%= label_tag(:signup_email, "Email:") %><br/>
			  <%= text_field_tag(:signup_email) %><br/>
			  <%= label_tag(:signup_confirm_email, "Confirm Email:") %><br/>
			  <%= text_field_tag(:signup_confirm_email) %><br/>
			  <%= label_tag(:signup_password, "Password:") %><br/>
			  <%= password_field_tag(:signup_password) %><br/>
			  <%= label_tag(:confirm_password, "Confirm Password:") %><br/>
			  <%= password_field_tag(:confirm_password) %><br/>
			  <%= submit_tag("Submit") %>
			<% end %>		
		</div>
		<% if @signup_error %>
			<p style='color: red;'>'Email' or 'Password' did not match confirmation</p>
		<% end %>


	</div>

	<div class="row col-md-4 col-md-offset-4" style="text-align: center">
		<h2 id="login-head">Or Login</h2>
		<div class="login-box">
			<%= form_tag("/session", method: "post") do %>
			  <%= label_tag(:login_email, "Email:") %><br/>
			  <%= text_field_tag(:login_email) %><br/>
			  <%= label_tag(:login_password, "Password:") %><br/>
			  <%= password_field_tag(:login_password) %><br/>
			  <%= submit_tag("Login") %>
			<% end %>	
		</div>
		<% if @login_error %>
			<p style='color: red;'>'Email' or 'Password' were invalid</p>
		<% end %>
	</div>
</div>
